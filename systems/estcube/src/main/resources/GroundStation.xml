<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<camelContext id="basic" xmlns="http://camel.apache.org/schema/spring">

		<route id="metadata">
			<from uri="timer:gsMetadata?delay=0" />
			<to uri="importer:gsMetadata?filename=/src/main/resources/GroundStationMetadata.xls" />
			<split>
				<simple>${body}</simple>
				<to uri="activemq:topic:metadata"/>
			</split>
		</route>

	</camelContext>
</beans>
